<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
>

    <EditText
        android:id="@+id/mainEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your name"
        android:inputType="textPersonName" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mouse_banner" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/aclonica"
            android:rotation="-30"
            android:text="Sale 30%"
            android:textColor="#000000"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        style="@style/MainTextView"
        android:id="@+id/textViewSelectItem"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:text="Select item" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mouse_little" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderPriceTitleTextView"
            style="@style/MainTextView"
            android:layout_marginStart="20dp"
            android:text="Order price" />

        <TextView
            android:id="@+id/priceTextView"
            style="@style/MainTextView"
            android:layout_below="@id/orderPriceTitleTextView"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="0" />

        <TextView
            android:id="@+id/currencyTextView"
            style="@style/MainTextView"
            android:layout_below="@id/orderPriceTitleTextView"
            android:layout_toRightOf="@id/priceTextView"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="$" />

        <TextView
            android:id="@+id/quantityTitleTextView"
            style="@style/MainTextView"
            android:layout_marginStart="110dp"
            android:layout_toRightOf="@id/orderPriceTitleTextView"
            android:text="Quantity" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Button"
            android:id="@+id/minusButton"
            android:layout_marginStart="110dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/currencyTextView"
            android:layout_below="@id/quantityTitleTextView"
            android:text="-"
            />

        <TextView
            android:id="@+id/quantityTextView"
            style="@style/MainTextView"
            android:layout_marginTop="10dp"
            android:layout_below="@id/quantityTitleTextView"
            android:layout_toRightOf="@id/minusButton"
            android:layout_marginStart="15dp"
            android:textSize="22sp"
            android:text="0" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Button"
            android:id="@+id/plusButton"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/quantityTextView"
            android:layout_below="@id/quantityTitleTextView"
            android:text="+"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonAddToCart"
        android:layout_width="match_parent"
        style="@style/Button"
        android:text="ADD TO CART"
        android:layout_marginTop="20dp"
        />
</LinearLayout>